{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",                     
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    // "declaration": true,
    // "emitDeclarationOnly": true,
    // "declarationMap": true,
    "moduleResolution": "node",
    // "noEmit": true,
    "noEmitOnError": true,
    "outDir": "./dist",    
    "skipLibCheck": true,
    "strict": true,
  },
  "includes": [
    "src/**/*"
  ],
}
